<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/videoThumbnailImageView"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/videoTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/videoThumbnailImageView"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/videoThumbnailImageView"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/videoDurationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videoTitleTextView"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@id/videoThumbnailImageView"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp" />

</RelativeLayout>
